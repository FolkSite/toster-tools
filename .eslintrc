{
    "root": true,
    "extends": "airbnb-base",
    "plugins": [
        "import"
    ],
    "parser": "espree",
    "env": {
        "browser": true,
        "webextensions": true
    },
    "globals": {
        "browser": true,
        "window": true,
        "webextensions": true
    },
    "rules": {
        "semi": 2,
        "no-console": 0,
        "import/first": 0,
        "no-lonely-if": 0,
        "no-tabs": 0,
        "func-names": 0,
        "no-underscore-dangle": 0,
        "comma-dangle": 0,
        "no-unused-expressions": 0,
        "no-shadow": 0,
        "no-plusplus": 0,
        "camelcase": 0,
        "no-param-reassign": 0,
        "object-shorthand": 0,
        "no-empty": 0,
        "no-useless-constructor": 0,
        "consistent-return": 0,
        "space-in-parens": 0,
        "computed-property-spacing": 0,
        "array-bracket-spacing": 0,
        "no-restricted-syntax": ["error", "WithStatement"],
        "global-require": 0,
        "import/no-dynamic-require": 0,
        "max-len": 0,
        "indent": 0,
        "no-mixed-operators": 0,
        "linebreak-style": ["error", "unix"],
        
        "no-unused-vars": [0, {
            "vars": "local",
            "args": "none",
            "ignoreRestSiblings": true,
            "caughtErrors": "none"
        }],
        
        "no-warning-comments": [0, {
            "terms": ["#TODO", "#FIX"],
            "location": "start"
        }],
        
        "prefer-arrow-callback": [0, {
            "allowNamedFunctions": true
        }]
    }
}
