{

	"manifest_version": 2,
	"name": "Toster wysiwyg panel",
	"short_name": "TWP",
	"description": "Добавляет функционал редактора формы ответа к форме комментария",
	"version": "1.4",
	"author": "Ярков Алексей (Yarkov Aleksei) <contact@data-keeper.ru>",

	"icons": {
		"64": "icon/icon-64-enabled.png"
	},

	"offline_enabled": false,

	"permissions": [
		"https://toster.ru/*"
	],

	"content_scripts": [ {
		"all_frames": false,
		"matches": [ "https://toster.ru/*" ],
		"js": [ "js/content.js" ],
		"run_at": "document_end"
	} ],

	"background": {
		"scripts": [ "js/background.js" ],
		"persistent": true
	},

	"browser_action": {
		"default_icon": {
			"64": "icon/icon-64-enabled.png"
		},
		"default_title": "Toster",
		"default_popup": "popup.html"
	}

}