{

  "manifest_version": 2,
  "name": "__MSG_extension_name__",
  "short_name": "__MSG_extension_shortname__",
  "description": "__MSG_extension_description__",
  "version": "3.11.7",
  "author": "Ярков Алексей (Yarkov Aleksei) <contact@data-keeper.ru>",
  "homepage_url": "https://github.com/yarkovaleksei/toster-wysiwyg-panel",
  "default_locale": "ru",
  "offline_enabled": false,

  "icons": {
    "16": "icon/icon-16x16.png",
    "32": "icon/icon-32x32.png",
    "48": "icon/icon-48x48.png",
    "64": "icon/icon-64x64.png",
    "128": "icon/icon-128x128.png"
  },

  "permissions": [
		"https://toster.ru/*",
		"notifications",
    "alarms"
	],

  "content_scripts": [ {
    "all_frames": false,
    "matches": [ "https://toster.ru/*" ],
    "css": [ "css/content.css" ],
    "js": [ "js/content.js" ],
    "run_at": "document_end"
	} ],

  "background": {
    "scripts": [ "js/background.js" ],
    "persistent": true
  },

  "browser_action": {
    "default_icon": {
      "64": "icon/icon-64x64.png"
    },
    "default_title": "__MSG_extension_name__",
    "default_popup": "popup.html"
  },

  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Alt+T",
        "mac": "Alt+T"
      }
    }
  },

  "web_accessible_resources": [
		"resources/twpwyg.js",
    "resources/toolbar.html",
    "css/foundation-icons.min.css",
    "fonts/foundation-icons.eot",
    "fonts/foundation-icons.svg",
    "fonts/foundation-icons.ttf",
    "fonts/foundation-icons.woff"
	]

}
