{

  "manifest_version": 2,
  "name": "__MSG_extension_name__",
  "short_name": "__MSG_extension_shortname__",
  "description": "__MSG_extension_description__",
  "version": "3.30.11",
  "author": "Ярков Алексей (Yarkov Aleksei) <contact@data-keeper.ru>",
  "homepage_url": "https://github.com/yarkovaleksei/toster-tools",
  "default_locale": "ru",
  "offline_enabled": false,

  "options_ui": {
    "chrome_style": true,
    "page": "html/options.html",
    "open_in_tab": true
  },

  "icons": {
    "16": "icon/icon-16x16.png",
    "32": "icon/icon-32x32.png",
    "48": "icon/icon-48x48.png",
    "64": "icon/icon-64x64.png",
    "128": "icon/icon-128x128.png"
  },

  "permissions": [
		"https://toster.ru/*",
		"notifications",
    "alarms",
    "browsingData"
	],

  "content_scripts": [ {
    "all_frames": false,
    "matches": [
      "https://toster.ru/*"
    ],
    "js": [
      "js/content.js"
    ],
    "css": [
      "css/content.css"
    ],
    "run_at": "document_end"
	} ],

  "web_accessible_resources": [
    "sound/sound1.ogg",
    "sound/sound2.ogg",
    "sound/sound3.ogg",
    "sound/sound4.ogg",
    "sound/sound5.ogg",
    "sound/sound6.ogg",
    "sound/sound7.ogg",
    "sound/sound8.ogg",
    "js/highlight.js"
  ],

  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": true
  },

  "browser_action": {
    "default_icon": {
      "64": "icon/icon-64x64.png"
    },
    "default_title": "__MSG_extension_name__",
    "default_popup": "html/popup.html"
  },

  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Alt+T",
        "mac": "Alt+T"
      }
    }
  }

}
