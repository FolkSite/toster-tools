{
    "tags": {
        "allowUnknownTags": true,
        "dictionaries": [ "jsdoc" ]
    },
    "templates": {
        "default": {
            "useLongnameInNav": true,
            "staticFiles": {
                "include": [
                    "./tutorials/static"
                ]
            }
        },
        "systemName": "Toster Tools",
        "dateFormat": "dd-MM-YY hh:mm:ss",
        "theme": "spacelab",
        "syntaxTheme": "dark",
        "openGraph": {
            "title": "",
            "type": "website",
            "image": "",
            "site_name": "Toster Tools documentation",
            "url": ""
        },
        "meta": {
            "title": "Toster Tools documentation",
            "description": "",
            "keyword": ""
        },
        "outputSourceFiles": true,
        "outputSourcePath": true,
        "collapseSymbols": true,
        "linenums": true,
        "inverseNav": true,
        "cleverLinks": true,
        "monospaceLinks": false
    },
    "plugins": [
        "plugins/markdown",
        "plugins/summarize"
    ],
    "opts": {
        "template": "./node_modules/ink-docstrap/template",
        "encoding": "utf8",
        "destination": "docs",
        "tutorials": "tutorials",
        "readme": "_readme.md",
        "recurse": true,
        "source": {
            "includePattern": ".+\\.js(doc|x)?$",
            "excludePattern": "(^|\\/|\\\\)babel"
        }
    }
}
